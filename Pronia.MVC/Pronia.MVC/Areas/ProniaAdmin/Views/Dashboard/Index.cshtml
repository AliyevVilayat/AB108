@model List<SliderItem>

<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Striped Table</h4>
                    <p class="card-description">
                        Add class <code>.table-striped</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Img
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Short Description
                                    </th>
                                    <th>
                                        Offer
                                    </th>
                                    <th>
                                        Created Date
                                    </th>
                                    <th>
                                        Last Modified Date
                                    </th>
                                    <th>
                                        Deleted Date
                                    </th>
                                    <th>
                                        Is Deleted
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SliderItem item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td class="py-1">
                                            <img src="~/assets/images/website-images//Musa.jpeg" alt="image" />
                                        </td>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            @item.ShortDescription
                                        </td>
                                        <td>
                                            @item.Offer %
                                        </td>
                                        <td>
                                            @item.CreatedDate
                                        </td>
                                        <td>


                                            @{

                                                string date = (item.LastModifiedDate == null) ? "-" : item.LastModifiedDate.ToString();


                                            }

                                            @date


                                        </td>
                                        <td>
                                            @{

                                                string date2 = null;
                                                if (item.DeletedDate.HasValue)
                                                {
                                                    date2 = item.DeletedDate.ToString();
                                                }
                                                else
                                                {
                                                    date2 = "-";
                                                }

                                            }

                                            @date2
                                        </td>
                                        <td>
                                            @item.IsDeleted
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>